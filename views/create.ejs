<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Profile</title>
    <style>
        /* Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: blanchedalmond;
            padding: 20px;
            color: #333;
        }

        h1, h2 {
            color: #007bff;
            margin: 10px 0;
        }

        /* Form Styles */
        form {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 500px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        input[type="text"],
        input[type="number"],
        input[type="email"] {
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 100%;
        }

        button {
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            color: #fff;
            font-weight: bold;
        }

        button[type="submit"] {
            background-color: #007bff;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        /* Profile List Styles */
        ul {
            list-style: none;
            width: 100%;
            max-width: 500px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        li {
            padding: 15px;
            border-bottom: 1px solid #eee;
            font-size: 16px;
            display: flex;
            flex-direction: column;
            background-color: #f9f9f9;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        li:last-child {
            border-bottom: none;
        }

        .profile-details {
            margin-left: 10px;
            color: #555;
        }

        /* Button Styling */
        .profile-buttons {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .profile-buttons form {
            display: inline;
        }

        /* Edit and Delete Button Styles */
        .profile-buttons button[type="button"] {
            background-color: #343a40; /* Dark color for Edit */
        }

        .profile-buttons button[type="button"]:hover {
            background-color: #23272b;
        }

        .profile-buttons button[type="submit"] {
            background-color: #dc3545; /* Red color for Delete */
        }

        .profile-buttons button[type="submit"]:hover {
            background-color: #c82333;
        }

        /* Responsive Design */
        @media (max-width: 500px) {
            body, form, ul {
                width: 100%;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <h1>Create New Profile</h1>
    <form id="profileForm" action="/add-profile" method="post">
        <input type="text" name="Name" id="Name" placeholder="Name" required />
        <input type="number" name="Contact_Number" id="Contact_Number" placeholder="Contact Number" required />
        <input type="email" name="Email" id="Email" placeholder="Email" required />
        <button type="submit">Add Profile</button>
    </form>
    <h2>Saved Profiles</h2>
    <ul>
        <% profiles1.forEach(profile => { %>
            <li id="c">
                <span><strong><%= profile.Name %></strong></span>
                <span class="profile-details">Email: <%= profile.Email %></span>
                <span class="profile-details">Contact Number: <%= profile.Contact_Number %></span>
                <div class="profile-buttons">
                    <form action="/update/<%= profile._id %>" method="post">
                        <button type="button" onclick="editProfile('<%= profile._id %>', '<%= profile.Name %>', '<%= profile.Contact_Number %>', '<%= profile.Email %>')">Edit</button>
                    </form>
                    <form action="/delete/<%= profile._id %>" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            </li>
        <% }) %>
    </ul>
    <script>
        function editProfile(id, name, contact, email) {
            document.getElementById('profileForm').action = `/update/${id}`;
            document.getElementById('Name').value = name;
            document.getElementById('Contact_Number').value = contact;
            document.getElementById('Email').value = email;
        }
    </script>
</body>
</html>
